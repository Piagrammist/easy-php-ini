{
    "name": "piagrammist/easy-php-ini",
    "description": "A quick way to ready your php.ini!",
    "type": "project",
    "license": "MIT",
    "scripts": {
        "test": ["pest --color=always"]
    },
    "autoload": {
        "psr-4": {
            "EasyIni\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Reza Royani",
            "email": "Piagrammist@gmail.com",
            "homepage": "https://github.com/Piagrammist"
        },
        {
            "name": "Mahdi Talaeii",
            "homepage": "https://github.com/mtalaeii"
        }
    ],
    "require": {
        "php": "^8.2",
        "monolog/monolog": "^3.7"
    },
    "require-dev": {
        "pestphp/pest": "^2.35"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
